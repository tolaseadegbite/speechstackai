<% title = @service_type.humanize.titleize %>
<% provide(:title, title) %>
<% content_for :page_header, title %>

<% content_for :header_action_buttons do %>
  <%= link_to "New Feedback", new_feedback_path(service: @service_type),
                class: "btn",
                data: { turbo_frame: "modal" } %>

  <%= link_to "Documentation", "", class: "btn" %>
<% end %>

<% case @service_type %>
<% when "text_to_speech" %>
  <%= render "text_to_speech_page" %>
<% when "voice_changer" %>
  <%= render "voice_changer_page" %>
<% when "sound_effects" %>
  <%= render "sound_effects_page" %>
<% end %>
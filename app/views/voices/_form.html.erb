<%= form_with(model: voice, html: { contents: true }) do |form| %>
  <% if voice.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(voice.errors.count, "error") %> prohibited this voice from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% voice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.text_area :description, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :s3_key, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :s3_key, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :languages, class: "text-sm font-medium leading-none" %>
    <%= form.select :language_ids, @languages.collect { |l| [l.name, l.id] }, { prompt: "Select language(s)" }, { multiple: true, class: "i-full", data: { controller: "combobox" } } %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :gender, class: "text-sm font-medium leading-none" %>
    <%= form.select :gender, Voice.genders.keys, { prompt: "Select voice gender" }, class: "i-full", data: { controller: "combobox" } %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>

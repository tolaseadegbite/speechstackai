<% content_for :title, "Voices" %>
<% content_for :page_header, "Voices" %>

<div class="i-full p-4 mi-auto" style="max-width: 90rem;">
  <div class="flex items-center justify-between mbe-4">
    <h1 class="font-bold text-2xl">Default Voices</h1>

    <div contents data-controller="dialog">
      <button type="button" class="btn btn--primary" data-action="dialog#showModal">
        New voice
      </button>

      <dialog class="dialog" style="--dialog-size: 500px;" data-dialog-target="content" data-action="click->dialog#closeOnClickOutside" aria-label="Add a new voice">
        <button type="button" class="btn btn--plain dialog__close" data-action="click->dialog#close">
          <span class="icon icon--x" aria-hidden="true"></span>
          <span class="sr-only">Close</span>
        </button>
        <div class="dialog__content">
          <h2 class="font-semibold text-lg mbe-4">Add a new voice</h2>
          <%= render "form", voice: @voice %>
        </div>
      </dialog>
    </div>
  </div>

  <div id="voices" class="grid grid-cols-1 grid-cols-2@sm grid-cols-2@md grid-cols-3@lg gap-4 gap">
    <% @voices.each do |voice| %>
        <%= render voice %>
    <% end %>
  </div>
</div>
<% content_for :title, "Voices" %>
<% content_for :page_header, "Voices" %>

<div class="i-full p-4 mi-auto" style="max-width: 90rem;">
  <div class="flex items-center justify-between mbe-4">
    <h1 class="font-bold text-2xl">Default Voices</h1>

    <%# 1. Define the trigger button HTML %>
    <% trigger = button_tag "New voice", type: "button", class: "btn btn--primary", data: { action: "dialog#showModal" } %>

    <%# 2. Call our new helper with the trigger and options %>
    <%= modal_dialog trigger, title: "Add a new voice", size: '500px' do %>
      <div id="new_voice_form">
        <%= render "form", voice: @voice %>
      </div>
    <% end %>

  </div>

  <div id="voices" class="grid grid-cols-1 grid-cols-2@sm grid-cols-2@md grid-cols-3@lg gap-4 gap">
    <% @voices.each do |voice| %>
        <%= render voice %>
    <% end %>
  </div>
</div>
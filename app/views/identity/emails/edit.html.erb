<%= turbo_frame_tag "settings_content" do %>
  <div class="p-4">

    <%# --- MOBILE-ONLY BACK BUTTON --- %>
    <%= render "shared/settings_back_button" %>

    <div class="max-i-full">
      <% if Current.user.verified? %>
        <h1 class="font-bold text-2xl mbe-4">Change your email</h1>
      <% else %>
        <h1 class="font-bold text-2xl mbe-4">Verify your email</h1>
        <p class="text-subtle mbe-2">We sent a verification email to the address below. Check that email and follow those instructions to confirm it's your email address.</p>
        <div class="mbe-4">
          <%= button_to "Re-send verification email", identity_email_verification_path, class: "btn", data: { turbo_frame: "_top" } %>
        </div>
      <% end %>

      <div id="edit_email_form">
        <%= render 'form', user: @user %>
      </div>
    </div>
  </div>
<% end %>
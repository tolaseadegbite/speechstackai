<div class="vc-card border-l-4 border-purple-500 p-4 mb-4 bg-gray-50 rounded shadow">
  <div class="flex justify-between">
    <h4 class="font-bold text-purple-700">Voice Changer</h4>
    
    <%= render "generated_audio_clips/actions", clip: voice_conversion_clip %>
  </div>

  <!-- Specific VC Design: Compare Original vs New -->
  <div class="grid grid-cols-2 gap-4 mt-3">
    <div>
      <span class="text-xs uppercase">Original Upload</span>
      <!-- You would need a helper/method to get original URL -->
      <audio controls src="<%= voice_conversion_clip.original_voice_s3_key %>" class="w-full h-8"></audio>
    </div>
    
    <div>
      <span class="text-xs uppercase font-bold">Converted Result</span>
      <audio controls src="<%= audio_url_generated_audio_clip_path(voice_conversion_clip) %>" class="w-full h-8"></audio>
    </div>
  </div>
</div>
<%= turbo_frame_tag "settings_content" do %>
  <div class="p-4">

    <%# --- MOBILE-ONLY BACK BUTTON --- %>
    <%= render "shared/settings_back_button" %>

    <div class="max-i-full" style="max-width: 48rem;">
      <h1 class="font-bold text-2xl mbe-4">Change your password</h1>
      <p class="text-subtle mbe-4">For your security, please choose a strong, unique password that you don't use for any other online account.</p>

      <%# I'm using your provided form code. I noticed it's missing the model, which might cause errors. %>
      <%# The form_with should ideally be: form_with(model: @user, url: password_path, method: :patch) %>
      <%= form_with(url: password_path, method: :patch) do |form| %>
        <% if @user && @user.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="flex flex-col items-start gap-half mbe-4">
          <%= form.label :password_challenge, "Current password", class: "text-sm font-medium leading-none" %>
          <%= form.password_field :password_challenge, required: true, autofocus: true, autocomplete: "current-password", class: "input i-full" %>
        </div>

        <div class="flex flex-col items-start gap-half mbe-4">
          <%= form.label :password, "New password", class: "text-sm font-medium leading-none" %>
          <%= form.password_field :password, required: true, autocomplete: "new-password", class: "input i-full" %>
          <p class="text-xs text-subtle">12 characters minimum.</p>
        </div>

        <div class="flex flex-col items-start gap-half mbe-4">
          <%= form.label :password_confirmation, "Confirm new password", class: "text-sm font-medium leading-none" %>
          <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "input i-full" %>
        </div>

        <div class="inline-flex items-center gap-2 mbs-4">
          <%= form.submit "Save changes", class: "btn btn--primary", data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>
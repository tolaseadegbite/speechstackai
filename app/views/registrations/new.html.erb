<div class="p-4 i-full bg-main" style="max-inline-size: 25rem;">
  <div class="text-center">
    <div class="mbe-5">
      <%= link_to root_path, class: "block" do %>
        <span class="icon icon--audio-waveform p-8" aria-hidden="true"></span>
      <% end %>
    </div>
    <h1 class="font-semibold text-2xl mbe-5">Sign up to SpeechstackAI</h1>
  </div>

  <%= form_with(url: sign_up_path) do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert--negative flex items-start mbe-5" role="alert">
        <span class="icon icon--circle-alert" aria-hidden="true"></span>
        <div class="flex flex-col mis-3">
          <h5 class="font-medium leading-none mbe-1">Unable to create user.</h5>
          <div class="flex flex-col text-sm">
            <p class="mbe-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
            <ul class="mis-3" style="list-style: disc">
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mbe-5">
      <div class="mbe-5">
        <%= form.label :name, style: "display: block", class: "font-semibold mbe-1" %>
        <%= form.text_field :name, value: @user.name, placeholder: "Enter your name", required: true, autofocus: true, class: "input" %>
      </div>
      
      <%= form.label :email, style: "display: block", class: "font-semibold mbe-1" %>
      <%= form.email_field :email, value: @user.email, required: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mbe-5">
      <%= form.label :password, style: "display: block", class: "font-semibold mbe-1" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", class: "input" %>
      <div class="text-sm text-end">12 characters minimum.</div>
    </div>

    <div class="mbe-5">
      <%= form.label :password_confirmation, style: "display: block", class: "font-semibold mbe-1" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "input" %>
    </div>

    <div>
      <%= form.submit "Sign up", class: "btn btn--primary i-full" %>
    </div>
  <% end %>

  <br>

  <div class="text-sm text-center">
    <%= link_to "Sign in", sign_in_path %> | <%= link_to "Sign in without password", new_sessions_passwordless_path %>
  </div>

  <div class="text-sm text-center">
    <%#= button_to "Sign in with OmniAuth", "/auth/developer", "data-turbo" => false %>
  </div>

  <br>

  <div class="text-sm text-center">
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>

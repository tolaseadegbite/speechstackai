<h2 class="text-2xl font-bold mbe-6">Users</h2>

<div class="bg-surface border rounded-lg overflow-hidden">
  <table class="i-full text-start" style="border-collapse: collapse;">
    <thead class="bg-shade text-subtle text-xs uppercase border-b">
      <tr>
        <th class="p-4 text-start font-medium">User</th>
        <th class="p-4 text-start font-medium">Credits</th>
        <th class="p-4 text-start font-medium">Role</th>
        <th class="p-4 text-start font-medium">Joined</th>
        <th class="p-4 text-end font-medium">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="border-b last:border-0 hover:bg-shade">
          <td class="p-4">
            <p class="font-medium"><%= user.name %></p>
            <p class="text-sm text-subtle"><%= user.email %></p>
          </td>
          <td class="p-4 font-mono"><%= user.credits %></td>
          <td class="p-4">
            <% if user.admin? %>
              <span class="badge badge--neutral">Admin</span>
            <% else %>
              <span class="text-subtle text-sm">User</span>
            <% end %>
          </td>
          <td class="p-4 text-sm text-subtle"><%= user.created_at.to_date %></td>
          <td class="p-4 text-end">
            <%= link_to "Manage", edit_admin_user_path(user), class: "btn btn--subtle btn--sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
          <span class="icon icon--map" aria-hidden="true"></span>
          <span class="overflow-ellipsis">Travel</span>
        <% end %>
        <%= tag.a class: "btn sidebar-menu__button", aria: { disabled: true } do %>
          <span class="icon icon--ellipsis" aria-hidden="true"></span>
          <span class="overflow-ellipsis">More</span>
        <% end %>
      </nav>
    </div>
  </div>

  <div class="flex items-center gap mbs-auto">
    <%= link_to "Sign in", sign_in_path, class: "btn i-full" %>
    <%= link_to "Sign up", sign_up_path, class: "btn btn--primary i-full" %>

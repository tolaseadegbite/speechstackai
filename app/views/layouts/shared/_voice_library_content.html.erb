<% id_prefix ||= "library" %>

<%# --- START: The Fixed Header Section --- %>
<div class="shrink-0">
  <%# Call to Action: Explore Voice Library %>
  <div class="flex items-center gap-3 p-4 bg-shade rounded-lg relative">
    <div class="pi-6 pb-3 v-library-bg-grad text-reversed rounded-lg shadow-md">
      <span class="icon icon--apps" style="--icon-size: 1.5rem" aria-hidden="true"></span>
    </div>
    <div class="flex flex-col gap-half">
      <p class="font-semibold leading-none">Explore Voice Library</p>
      <p class="text-sm text-subtle">Use our default high quality voices.</p>
    </div>
  </div>
</div>
<%# --- END: The Fixed Header Section --- %>

<%# --- START: The Scrollable List Section (Voice Selection) --- %>
<div class="flex flex-col grow overflow-y-auto mis-1 mbs-2 pbs-2">
  <div class="flex justify-between items-center mbe-2 mie-2">
    <p class="font-semibold">Default</p>
  </div>

  <% @voices.each do |voice| %>
    <% unique_id = "#{id_prefix}_voice_id_#{voice.id}" %>

    <%# THE FIX: The `value` attribute is removed and the `for` attribute is added
        to explicitly link the label to the radio button with the new unique ID. %>
    <%= f.label :voice_id, for: unique_id, class: "card card--selectable p-3 flex items-start shadow-none mie-2 mbe-2 cursor-pointer" do %>
      <%= f.radio_button :voice_id, voice.id, class: "sr-only", id: unique_id, data: { action: "voice-selector#select" } %>

      <div class="flex items-center justify-between gap-4 i-full">
        <span class="voice-swatch shrink-0" style="--icon-size: 2.1rem; <%= voice_gradient_style(voice) %>" aria-hidden="true"></span>
        
        <div class="flex flex-col overflow-hidden">
          <p class="font-semibold"><%= voice.name %></p>
          <p class="text-sm text-subtle overflow-ellipsis"><%= "#{voice.languages.first&.name} - #{voice.gender.capitalize}" %></p>
        </div>

        <div class="mis-auto shrink-0 flex items-center gap-2">
          <% if voice.s3_key.present? %>
            <% s3_url = presigned_s3_url(voice.s3_key) %>
            <button type="button" class="btn btn--icon btn--subtle"
                      data-action="click->audio-player#play"
                      data-audio-player-url-param="<%= s3_url %>"
                      data-audio-player-title-param="<%= voice.name %>"
                      data-audio-player-author-param="<%= voice.user&.name || 'Community' %>"
                      data-audio-player-filename-param="<%= "#{voice.name.parameterize}.mp3" %>"
                      data-audio-player-gradient-start-param="<%= voice.gradient_start %>"
                      data-audio-player-gradient-end-param="<%= voice.gradient_end %>">
              
              <div data-play-icon-url="<%= s3_url %>">
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="currentColor"><path d="M5 3l14 9-14 9V3z"/></svg>
              </div>
            </button>
          <% else %>
            <button type="button" class="btn btn--icon btn--subtle" disabled style="opacity: 0.5; cursor: not-allowed;">
              <div>
                 <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="currentColor"><path d="M5 3l14 9-14 9V3z"/></svg>
              </div>
            </button>
          <% end %>

          <%# <button type="button" class="btn btn--icon btn--subtle">
            <span class="icon icon--more-horizontal" aria-hidden="true"></span>
          </button> %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<%# --- END: The Scrollable List Section --- %>
<%# --- Mobile Player (Hidden on LG and up) --- %>
<div class="hide@lg p-4">

  <%# Section 1: Progress Bar (Now calls the 'expand' action) %>
  <button type="button" class="btn btn--plain i-full" data-action="click->player-visibility#expand">
    <div class="relative i-full bg-shade rounded-full" style="block-size: 2px;">
      <div class="absolute b-full bg-black rounded-full" style="inline-size: 20%;"></div>
    </div>
  </button>

  <%# Section 2: Collapsible Content %>
  <div class="relative flex items-center justify-between gap-4 pbs-2" data-player-visibility-target="collapsible">
    <!-- Left Section: Clip Info -->
    <div class="flex flex-col min-i-0">
      <p class="font-medium text-primary overflow-ellipsis">This is my generated clip title.</p>
      <div class="flex items-center gap-half text-sm text-subtle mbs-1">
        <div class="rounded-full" style="inline-size: 1.25rem; block-size: 1.25rem; background: linear-gradient(180deg, #FDBFDE 0%, #E66FB2 100%);"></div>
        <span class="font-medium">Tolase</span>
        <span>Â·</span>
        <svg class="shrink-0" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        <span>Just now</span>
      </div>
    </div>

    <!-- Right Section: Actions -->
    <div class="flex items-center gap-2 shrink-0">
      <button type="button" class="btn btn--icon border-0"><span class="icon icon--download" aria-hidden="true"></span></button>
      <button class="bg-black text-reversed rounded-full p-2 border-0"><svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor"><path d="M5 3l14 9-14 9V3z"/></svg></button>
      <%# This chevron-down button now ONLY calls the 'minimize' action. %>
      <button type="button" class="btn btn--icon border-0" data-action="click->player-visibility#minimize">
        <span class="icon icon--chevron-down" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</div>
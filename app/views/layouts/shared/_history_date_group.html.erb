<%= tag.div class: "flex flex-col gap-2", id: "history_date_group_#{date.to_s}" do %>

  <h3 class="text-sm font-semibold bg-shade pi-2 pb-1 rounded-lg mi-auto">
    <%= date.strftime("%B %d, %Y") %>
  </h3>

  <div class="flex flex-col gap-2" id="history_items_for_<%= date.to_s %>">
    <%= render partial: "layouts/shared/history_item", collection: audio_clips, as: :audio %>
  </div>

<% end %>
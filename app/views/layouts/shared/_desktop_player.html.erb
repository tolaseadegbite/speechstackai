<div class="audio-player flex flex-col show@lg i-full p-2 gap-1">

  <%# --- START: Always Visible Section --- %>
  <%# THE FIX: We now have only ONE progress bar container. %>
  <%# It is a button that always calls the `expand` action. %>
  <button type="button" class="btn btn--plain i-full progress-bar-container" data-action="click->player-visibility#expand">
    <div class="flex items-center grow gap-2 min-i-0 progress-bar">
      <span class="text-xs text-subtle whitespace-nowrap">0:04</span>
      <div class="relative i-full bg-shade rounded-full" style="block-size: 4px;">
        <div class="absolute b-full bg-black rounded-full" style="inline-size: 20%;"></div>
      </div>
      <span class="text-xs text-subtle whitespace-nowrap">0:20</span>
    </div>
  </button>
  <%# --- END: Always Visible Section --- %>


  <%# Section 2: Collapsible Content %>
  <div class="flex items-center i-full gap-4" data-player-visibility-target="collapsible">
    
    <!-- Left Section: Info -->
    <div class="flex flex-col shrink-0">
      <p class="text-sm font-medium whitespace-nowrap overflow-ellipsis" style="max-inline-size: 40ch;">Settle into a comfortable position and gently cl...</p>
      <div class="flex items-center gap-half text-sm mbs-1">
        <div class="rounded-full" style="inline-size: 1.25rem; block-size: 1.25rem; background: linear-gradient(180deg, #FDBFDE 0%, #E66FB2 100%);"></div>
        <span class="text-subtle font-medium">Tolase</span>
        <span class="text-subtle">Â·</span>
        <svg class="text-subtle" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        <span class="text-subtle">3/23/2025</span>
      </div>
    </div>
    
    <!-- Middle Section: Player Controls -->
    <div class="flex items-center grow gap-4 justify-center">
      <button type="button" class="btn border-0 btn--icon shrink-0 bg-primary rounded-full"><span class="icon icon--rotate-ccw" style="--icon-size: 1.2rem" aria-hidden="true"></span></button>
      <button class="bg-black text-reversed rounded-full p-2 border-0"><svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor"><path d="M5 3l14 9-14 9V3z"/></svg></button>
      <button type="button" class="btn border-0 btn--icon shrink-0 bg-primary rounded-full"><span class="icon icon--rotate-cw" style="--icon-size: 1.2rem" aria-hidden="true"></span></button>
      <div>
        <span class="text-xs text-subtle whitespace-nowrap">0:04 /</span>
        <span class="text-xs text-subtle whitespace-nowrap">0:20</span>
      </div>
    </div>
    
    <!-- Right Section: Actions -->
    <div class="flex items-center gap-2 shrink-0">
      <button type="button" class="btn border-0 btn--icon shrink-0 bg-primary rounded-full"><span class="icon icon--history" style="--icon-size: 1.2rem" aria-hidden="true"></span></button>
      <button type="button" class="btn border-0 btn--icon shrink-0 bg-primary rounded-full" data-action="click->player-visibility#minimize">
        <span class="icon icon--chevron-down" style="--icon-size: 1.2rem" aria-hidden="true"></span>
      </button>
    </div>

  </div>
</div>
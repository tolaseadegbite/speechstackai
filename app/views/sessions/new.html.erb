<div class="p-4 i-full bg-main" style="max-inline-size: 25rem;">
  <div class="text-center">
    <div class="mbe-5">
      <%= link_to root_path, class: "inline-block" do %>
        <%= image_tag("logo.png", size: 80) %>
      <% end %>
    </div>
    <h1 class="font-semibold text-2xl mbe-5">Sign in to 2yarn</h1>
  </div>

  <%= form_with(url: sign_in_path) do |form| %>
    <div class="mbe-5">
      <%= form.label :email, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mbe-5">
      <%= form.label :password, style: "display: block", class: "font-semibold mbe-2" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "input" %>
    </div>

    <div>
      <%= form.submit "Sign in", class: "btn btn--primary i-full" %>
    </div>
  <% end %>

  <br>

  <div class="text-sm text-center">
    <%= link_to "Sign in without password", new_sessions_passwordless_path %>
  </div>

  <!--<div class="text-sm text-center">
    <%#= button_to "Sign in with OmniAuth", "/auth/developer", "data-turbo" => false %>
  </div>-->

  <div class="text-sm text-center">
    <%= link_to "Sign up", sign_up_path %> |
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>